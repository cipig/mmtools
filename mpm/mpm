    foreach my $coin ( keys %{$marginsconf} ) {
        if ( defined $marginsconf->{$coin}{'geckoid'} ) {
            $ids = $ids.",".$marginsconf->{$coin}{'geckoid'};
        }
    }

    shift @ARGV;
